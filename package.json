{
  "name": "web-cv",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "build": "next build",
    "build:typst": "typst compile cv.typ ./public/cv.pdf --font-path src/assets",
    "check": "run-s lint typecheck",
    "dev": "run-p dev:typst dev:next",
    "dev:next": "next dev --turbopack",
    "dev:typst": "typst watch cv.typ ./public/cv.pdf --font-path src/assets",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "generate-json-schema": "typescript-json-schema ./src/data/resume-schema.ts CurriculumVitae -o src/data/resume-schema.json --required",
    "lint": "eslint . --max-warnings=0",
    "lint:fix": "eslint . --max-warnings=0 --fix",
    "prebuild": "bun run build:typst",
    "start": "next start",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "@radix-ui/react-avatar": "^1.1.11",
    "@radix-ui/react-dialog": "^1.1.15",
    "@radix-ui/react-scroll-area": "^1.2.10",
    "@radix-ui/react-slot": "^1.2.4",
    "@radix-ui/react-visually-hidden": "^1.2.4",
    "@tailwindcss/postcss": "^4.1.17",
    "@types/js-yaml": "^4.0.9",
    "@vercel/analytics": "^1.6.1",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "cmdk": "^1.1.1",
    "date-fns": "^4.1.0",
    "geist": "^1.5.1",
    "gray-matter": "^4.0.3",
    "js-yaml": "^4.1.1",
    "lucide-react": "^0.556.0",
    "motion": "^12.23.25",
    "next": "16.0.7",
    "next-mdx-remote": "^5.0.0",
    "next-themes": "^0.4.6",
    "npm-run-all": "^4.1.5",
    "react": "19.2.1",
    "react-dom": "19.2.1",
    "reading-time": "^1.5.0",
    "redis": "^5.10.0",
    "tailwind-merge": "^3.4.0",
    "tailwindcss-animate": "^1.0.7",
    "typescript-json-schema": "^0.67.0",
    "typst": "^0.10.0-8",
    "uuid": "^13.0.0",
    "vaul": "^1.1.2"
